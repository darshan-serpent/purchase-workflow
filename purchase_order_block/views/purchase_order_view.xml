<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.block.reason</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="date_order" position="after">
                <field name="po_block_id" attrs="{'readonly': [('id','!=', False)]}"/>
                <field name="released" invisible='True'/>
                <field name='id' invisible='True'/>
            </field>
            <xpath expr="//header/button[@name='button_confirm']"
                   position="before">
                <button name="button_release_block"
                        string="Release blocked RFQ"
                        type="object" class="btn-primary"
                        groups="purchase_order_block.group_rfq_block"
                        attrs="{'invisible': ['|','|',('po_block_id', '=', False),
                        ('state', 'not in', ['draft', 'sent', 'to approve']),('released', '=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_filter" model="ir.ui.view">
        <field name="name">request.quotation.select.block.reason</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="po_block_id"/>
            </field>
            <filter name="approved" position="after">
                <filter string="Blocked Purchases" name="blocked_po"
                        domain="[('released', '!=', True),('po_block_id', '!=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>
